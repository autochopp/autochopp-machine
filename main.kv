#:import sm kivy.uix.screenmanager

ScreenManagement:
    transition: sm.NoTransition()
    MainScreen:
    ReadQRCodeScreen:
    InvalidQRCodeScreen:
    ValidQRCodeScreen:
    WaitCup:
    WaitChopp:
    SuccessChopp:
    ExceptionScreen:
    ExceptionNoBreakScreen:


<MainScreen>:
    name: 'main'

    Button:
        on_release: app.root.current = 'readQRCodeScreen'
        text: '\n\n\n\n\n\n\n Bem vindo! \n\n\n Toque na tela para pegar seu chopp!'
        halign: 'center'
        valign: 'middle'
        #background_color: (0.209, 0.200, 0.204, 1)
        background_normal: 'tela-inicial.png'
        color: (1, 1, 1, 1)
        font_size: 32

<ReadQRCodeScreen>:
    name: 'readQRCodeScreen'
    canvas:
        Color:
            #rgb: (0.93, 0.93, 0.93)
            #rgb: (0.047, 0.22, 0.698)
            #rgb: (0.992, 0.788, 0.267, 1)
            #rgb: (0.209, 0.200, 0.204, 1)
            
        Rectangle:
            pos: self.pos
            size: self.size
            source: "tela-outras.png"

    BoxLayout:
        orientation: 'vertical'

        Label:
            name: 'lblQrCode'
            id: lblQrCode
            text: "\n\n\n\nAproxime seu QR Code da câmera."
            font_size: 24
            color: (1, 1, 1, 1)
            #color: (0.047, 0.22, 0.698, 1)

        Image:
            name: 'img_camera'
            id: img_camera
            source: 'chopp.jpeg'

<InvalidQRCodeScreen>:
    name: 'invalidQRCodeScreen'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoInvalidQRCode'
            id: btnInfoInvalidQRCode
            text: 'QRCode inválido!\n\nToque na tela para voltar ao início.'
            halign: 'center'
            valign: 'middle'
            background_normal: 'tela-outras.png'
            color: (1, 1, 1, 1)
            font_size: 32
            on_release: app.root.current = 'main'

<ValidQRCodeScreen>:
    name: 'validQRCodeScreen'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: 'QRCode válido!\n\n Aguarde um momento... \n\n'
            halign: 'center'
            valign: 'middle'
            background_normal: 'tela-outras.png'
            color: (1, 1, 1, 1)
            font_size: 32

<WaitCup>:
    name: 'waitCup'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: '\n\nPegue seu copo na gaveta,\n\n e posicione no suporte! \n\n'
            halign: 'center'
            valign: 'middle'
            background_normal: 'tela-outras.png'
            color: (1, 1, 1, 1)
            font_size: 32

<WaitChopp>:
    name: 'waitChopp'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: '\n\nAguarde enquanto seu chopp é preparado. \n\n'
            halign: 'center'
            valign: 'middle'
            background_normal: 'tela-outras.png'
            color: (1, 1, 1, 1)
            font_size: 32

<SuccessChopp>:
    name: 'successChopp'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: 'Seu Chopp foi servido com sucesso!!\n\n\n\nToque na tela para voltar ao início.'
            halign: 'center'
            valign: 'middle'
            background_normal: 'tela-outras.png'
            color: (1, 1, 1, 1)
            font_size: 32
            on_release: app.root.current = 'main'

<ExceptionScreen>:
    name: 'exceptionScreen'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: 'Estamos com problemas em nossos servidores!!\n\n\n\nPor favor, volte mais tarde.'
            halign: 'center'
            valign: 'middle'
            background_normal: 'tela-outras.png'
            color: (1, 1, 1, 1)
            font_size: 32
            on_release: app.root.current = 'main'

<ExceptionNoBreakScreen>:
    name: 'exceptionNoBreakScreen'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: 'Estamos com falta de energia no momento!!\n\n\n\nPor favor, tente novamente mais tarde.'
            halign: 'center'
            valign: 'middle'
            background_normal: 'tela-outras.png'
            color: (1, 1, 1, 1)
            font_size: 32
            on_release: app.root.current = 'main'
