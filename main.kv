#:import sm kivy.uix.screenmanager

ScreenManagement:
    transition: sm.FadeTransition()
    MainScreen:
    ReadQRCodeScreen:
    InvalidQRCodeScreen:
    ValidQRCodeScreen:
    WaitCup:
    SuccesChopp:

<MainScreen>:
    name: 'main'

    Button:
        on_release: app.root.current = 'readQRCodeScreen'
        text: ' Bem vindo ao Auto-choop! \n\n Que tal um chopp? \n\n Toque na tela para pegar o seu!'
        halign: 'center'
        valign: 'middle'
        background_color: (0.047, 0.22, 0.698, 1)
        color: (0.992, 0.788, 0.267, 1)
        font_size: 32

<ReadQRCodeScreen>:
    name: 'readQRCodeScreen'
    canvas:
        Color:
            #rgb: (0.93, 0.93, 0.93)
            #rgb: (0.047, 0.22, 0.698)
            rgb: (0.992, 0.788, 0.267, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            name: 'lblQrCode'
            id: lblQrCode
            text: "Aproxime seu QR Code da câmera"
            font_size: 24
            color: (0.047, 0.22, 0.698, 1)

        Image:
            name: 'img_camera'
            id: img_camera
            source: 'chopp.jpeg'

<InvalidQRCodeScreen>:
    name: 'invalidQRCodeScreen'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoInvalidQRCode'
            id: btnInfoInvalidQRCode
            text: 'QRCode inválido!\n\nToque na tela para voltar ao início.'
            halign: 'center'
            valign: 'middle'
            background_color: (0.047, 0.22, 0.698, 1)
            color: (0.992, 0.788, 0.267, 1)
            font_size: 32
            on_release: app.root.current = 'main'

<ValidQRCodeScreen>:
    name: 'validQRCodeScreen'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: 'Seu QRCode é válido!\n\n Posicione seu copo no suporte \n\n'
            halign: 'center'
            valign: 'middle'
            background_color: (0.047, 0.22, 0.698, 1)
            color: (0.992, 0.788, 0.267, 1)
            font_size: 32
            on_release: app.root.current = 'waitCup'

<WaitCup>:
    name: 'waitCup'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: '\n\nAguarde enquanto seu chopp é preparado. \n\n'
            halign: 'center'
            valign: 'middle'
            background_color: (0.047, 0.22, 0.698, 1)
            color: (0.992, 0.788, 0.267, 1)
            font_size: 32
            on_release: app.root.current = 'succesChopp'

<SuccesChopp>:
    name: 'succesChopp'
    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'btnInfoValidQRCode'
            id: btnInfoValidQRCode
            text: 'Seu Chopp foi servido com sucesso!!\n\n\n\nToque na tela para voltar ao início.'
            halign: 'center'
            valign: 'middle'
            background_color: (0.047, 0.22, 0.698, 1)
            color: (0.992, 0.788, 0.267, 1)
            font_size: 32
            on_release: app.root.current = 'main'
